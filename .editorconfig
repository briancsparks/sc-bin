# Top-most EditorConfig file
#root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

# Override for Python files
[*.py]
indent_size = 4

# Override for Makefiles
[Makefile]
indent_style = tab

